---
import BlockRendererInner from "./BlockRenderer.astro";
import {type Block, getBlockStyling} from "@wp-block-tools/styles";

type Props = {
    postId: number;
    blocks: Block[];
}

const {blocks, postId} = Astro.props
---

{blocks.map((block) => {
    const {styles, classes} = getBlockStyling(block)

    switch (block.name) {
        case "core/navigation":
            return <Navigation classes={classes} styles={styles}>
                <BlockRendererInner blocks={block.innerBlocks || []} />
            </Navigation>
        default:
            return null
    }
})}
